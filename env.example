# ===================================================================
#  Bella's Reef - Unified Configuration (.env.example)
# ===================================================================
# This file lives at the project root.
# Copy to .env and fill in your values for local development.

# --- Database & Security (Shared by All Services) ---
DATABASE_URL=postgresql://postgres:postgres@localhost/bellasreef
SECRET_KEY=f6b986c581fa6f341667a5552ba935baa47bc693f4a47927db4cf93c6e6dff3e # Generate with: openssl rand -hex 32
SERVICE_TOKEN=d2263c2b4c5dfcbbca32181aa7963322e8a4c6c973b5e61beadbd4d90fa2698f # Generate with: openssl rand -hex 32
ENCRYPTION_KEY=71adbd373ea4ebb8f72191ac7169bebe6855203894c3902c149f46016adb322a # Generate with: openssl rand -hex 32
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Core Service & Admin User ---
CORE_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password
ADMIN_EMAIL=admin@example.com
ALLOWED_HOSTS=["*"] # JSON array or comma-separated

# --- General Service Settings ---
SERVICE_HOST=0.0.0.0
DEBUG=false
LOG_LEVEL=INFO

# --- Control Service (Hardware) ---
# Platform: "legacy" (Pi 4 and earlier), "rpi5", or "none"
RPI_PLATFORM=none
# Comma-separated BCM GPIO pin numbers
PWM_GPIO_PINS=
PWM_FREQUENCY=1000
PWM_CHANNELS=16
# --- PCA9685 External PWM Controller ---
PCA9685_ENABLED=false
PCA9685_ADDRESS=0x40
PCA9685_FREQUENCY=1000

# --- Temperature Service ---
TEMP_ENABLED=true
SERVICE_PORT_TEMP=8004 # Unique port for the temp service
SENSOR_POLL_INTERVAL=30
# GPIO pin for 1-wire data line (e.g., DS18B20)
W1_GPIO_PIN=4

# --- SmartOutlets Service ---
SMART_OUTLETS_ENABLED=true
SERVICE_PORT_SMARTOUTLETS=8005 # Unique port for the smartoutlets service
# Driver-specific enable flags
SMART_OUTLETS_KASA_ENABLED=true
SMART_OUTLETS_SHELLY_ENABLED=true
SMART_OUTLETS_VESYNC_ENABLED=true
# VeSync Cloud Credentials (optional)
VESYNC_EMAIL=
VESYNC_PASSWORD=
# Network settings for outlets
OUTLET_TIMEOUT_SECONDS=5
OUTLET_MAX_RETRIES=3

# You can add ports for other services here as you build them out
# SERVICE_PORT_CORE=8000
# SERVICE_PORT_SCHEDULER=8001
# etc...
