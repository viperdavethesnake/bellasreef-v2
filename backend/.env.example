# ==============================
# Bella's Reef Backend - .env
# Copy this file to `.env` and update values as needed.
# ==============================

# === Environment Settings ===
ENV=development
LOG_LEVEL=INFO

# === Security Settings ===
SECRET_KEY=your-32-character-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# === Database Settings ===
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=bellasreef
# DATABASE_URL=postgresql://postgres:your-secure-password@localhost:5432/bellasreef

# === PWM Platform Selection ===
# Options: auto, legacy, rp1, none
RPI_PLATFORM=auto

# === PCA9685 Configuration ===
USE_PCA9685=false        # true/false
PCA9685_ADDRESS=0x40     # I2C address
PCA9685_FREQUENCY=1000   # Hz

# === General PWM Settings ===
PWM_FREQUENCY=1000       # Default frequency if using GPIO-based PWM
PWM_CHANNELS=16          # Max available channels

# === Email Alert Settings (Optional) ===
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Bella's Reef Alerts
