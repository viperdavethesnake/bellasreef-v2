# ==============================
# Bella's Reef Backend - .env
# Copy this file to `.env` and update values as needed.
# ==============================

# === Environment Settings ===
ENV=development         # Options: development, testing, production
LOG_LEVEL=INFO          # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# === Security Settings ===
SECRET_KEY=your-32-character-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# === Database Settings ===
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=bellasreef

# Optional: Direct override instead of composing from above
# DATABASE_URL=postgresql://postgres:your-secure-password@localhost:5432/bellasreef

# === Hardware Settings ===
PWM_FREQUENCY=1000                 # PWM frequency in Hz
PWM_CHANNELS=16                    # Number of PWM channels
SENSOR_POLL_INTERVAL=60           # Sensor polling interval in seconds

# === Email Alert Settings (Optional) ===
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Bella's Reef Alerts
